<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <fragment
        android:id="@+id/fragment_search"
        android:name="com.flying.personal.dotawakeupassistant.SearchEditTextFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tools:layout="@layout/fragment_search_edittext" />

    <fragment
        android:id="@+id/fragment_nav"
        android:name="com.flying.personal.dotawakeupassistant.BottomNavigationFragment"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_bottom_navbar" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_nav"
        android:layout_below="@id/fragment_search"
        android:layout_margin="0dp"
        android:background="@color/black"
        android:foregroundGravity="center_horizontal"
        android:padding="0dp">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:padding="0dp" />

    </ScrollView>

</RelativeLayout><!-- From: file:/D:/mywork/GitHub/DotaWakeupAssistant/app/src/main/res/layout/activity_main.xml -->