<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llparent_in_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHead"
        style="@style/layout_vertical"
        android:layout_weight="382"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="382"
            android:gravity="center">

            <com.flying.personal.dotawakeupassistant.view.RoundImageView
                android:id="@+id/ivHeroPortrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:borderRadius="8dp"
                app:scaleType="AutoScale"
                app:srcFilePath="feiji" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTopName"
            style="@style/layout_horizontal"
            android:layout_weight="618"
            android:orientation="vertical">

            <com.flying.personal.dotawakeupassistant.view.AutoAdjustFontSizeTextView
                android:id="@+id/tvHeroName"
                style="@style/layout_vertical"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="HeroName"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:minTextSize="10sp" />

            <TextView
                android:id="@+id/tvSkillDesc"
                style="@style/layout_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:gravity="left|top"
                android:maxLines="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="位置: 三大法撒旦发射大法师多发时段发生三大法撒旦发射大撒旦发射"
                android:textColor="@color/font_detail_main"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llContent"
        style="@style/layout_vertical"
        android:layout_weight="618"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llTask1"
            style="@style/layout_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:background="@drawable/layout_border"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                style="@style/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task1"
                android:textColor="@color/font_task_lable"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTask1"
                style="@style/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:text="Test:收集满60碎片"
                android:textColor="@color/font_detail_main"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:background="@drawable/layout_border"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                style="@style/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task2"
                android:textColor="@color/font_task_lable"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTask2"
                style="@style/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:text="Test:收集满60碎片"
                android:textColor="@color/font_detail_main"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/layout_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:background="@drawable/layout_border"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                style="@style/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task3"
                android:textColor="@color/font_task_lable"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTask3"
                style="@style/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:text="Test:收集满60碎片"
                android:textColor="@color/font_detail_main"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>