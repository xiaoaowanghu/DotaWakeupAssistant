<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 设置边框的宽度和颜色 -->
    <stroke
        android:width="4dp"
        android:color="@color/hero_portrait_border" />
    <!-- 设置框内的填充色  -->
    <solid android:color="@color/hero_portrait_border" />
    <!-- 设置圆角 -->
    <corners android:radius="15dip" />
    <!-- 设置内边距 -->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"></padding>
</shape>